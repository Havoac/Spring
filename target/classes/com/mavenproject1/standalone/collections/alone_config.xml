<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
xmlns:p="http://www.springframework.org/schema/p"
xmlns:util="http://www.springframework.org/schema/util"
xsi:schemaLocation="http://www.springframework.org/schema/beans
http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
http://www.springframework.org/schema/context
http://www.springframework.org/schema/context/spring-context.xsd
http://www.springframework.org/schema/util
http://www.springframework.org/schema/util/spring-util.xsd">

<!--standalone list-->
<util:list list-class="java.util.LinkedList" id="mybff" >
	<value>Ankit</value>
	<value>Vijay</value>
	<value>Aman</value>	
</util:list>

<!--standalone map-->
<util:map map-class="java.util.HashMap" id="fees">
	<entry key="Spring framework" value="6000" />
	<entry key="c++" value="0" />
</util:map>

<!--standalone properties-->
<util:properties id="dbconfig">
	<prop key="driver">hey</prop>
	<prop key="password">123456</prop>
</util:properties>

<bean class="com.mavenproject1.standalone.collections.Person" name="person1">
	<property name="friends" ref="mybff" />
	<property name="feeStructure" ref="fees" />
	<property name="properties" ref="dbconfig" />
</bean>



</beans>